<!DOCTYPE html>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="manifest" href="/manifest.json" crossorigin="use-credentials">
    <link rel="stylesheet" href="https://code.jquery.com/mobile/1.4.5/jquery.mobile-1.4.5.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open Sans">
    <style>
        @media (display-mode: standalone){}
        body {
            font-family: 'Open Sans';
        }

        a.nostyle:link,
        a.nostyle:visited,
        a.nostyle:hover,
        a.nostyle:active,
        span.nostyle {
            text-decoration: none;
            color: white;
            cursor: pointer;
        }

        .text {
            height: auto !important;
        }
    </style>
    {{{_sections.css}}}
    <script src="https://code.jquery.com/jquery-1.11.3.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@2.8.0"></script>
    <script src="https://code.jquery.com/mobile/1.4.5/jquery.mobile-1.4.5.min.js"></script>
    <script src="https://cdn.onesignal.com/sdks/OneSignalSDK.js" async=""></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/fingerprintjs2/2.1.0/fingerprint2.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.24.0/moment.min.js"></script>
    <script>
        var OneSignal = window.OneSignal || [];
        var deviceId;

        OneSignal.push(function () {
            OneSignal.init({
                appId: "3406e817-b8b6-40fd-b87e-b8dca58af298"
            });
            OneSignal.getUserId(function (userId) {
                deviceId = userId;
            });
            OneSignal.on('subscriptionChange', function (isSubscribed) {
                if (isSubscribed) {
                    $.post("register", { deviceId: deviceId }).then(function () {
                        $.getJSON("locations", { deviceId: deviceId }).then(function (data) {
                            if(Object.keys(data).length > 0) {
                                OneSignal.push(function () {
                                    OneSignal.sendTags(data);
                                });
                            }
                        });
                    }); 
                }
            });
        });
        OneSignal.push(["addListenerForNotificationOpened", function (message) {
                $.post("increment", { deviceId: deviceId, messageId: message.data.id });
        }]);

    </script>
    <script>
        $(document).on("pagecreate", "#demo-page", function () {
            $(document).on("swipeleft swiperight", "#demo-page", function (e) {
                // We check if there is no open panel on the page because otherwise
                // a swipe to close the left panel would also open the right panel (and v.v.).
                // We do this by checking the data that the framework stores on the page element (panel: open).
                if ($(".ui-page-active").jqmData("panel") !== "open") {
                    if (e.type === "swipeleft") {
                        $("#right-panel").panel("open");
                    } else if (e.type === "swiperight") {
                        $("#left-panel").panel("open");
                    }
                }
            });
        });
    </script>
</head>

<body>
    <div data-role="page" id="demo-page" data-url="demo-page">
        <div data-role="header" data-theme="b" data-position="fixed">
            {{{_sections.header}}}
        </div><!-- /header -->
        <div role="main" class="ui-content">
            {{{body}}}
        </div><!-- /content -->
        <div data-role="panel" id="left-panel" data-theme="b">
            <div class="ui-nodisc-icon">
                <a href="#" class="nostyle">
                    <div class="ui-btn ui-shadow ui-nodisc-icon ui-corner-all ui-icon-user ui-btn-icon-notext ui-btn-b ui-btn-inline"
                        style="margin-left:-10px;margin-top:2px;"></div>
                    {{#if isAuthenticated}}
                    <span class="nostyle">{{username}}</span>
                    {{else}}
                    <span class="nostyle">Sign In</span>
                    {{/if}}
                </a>
            </div>
            <br />
            <ul data-role="listview">
                {{{_sections.menu}}}
            </ul>
        </div><!-- /panel -->
        {{{_sections.footer}}}
    </div>
</body>

</html>