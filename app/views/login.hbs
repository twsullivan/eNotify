{{#section 'header'}}
<h1>Login</h1>
<a href="#left-panel" data-icon="carat-r" data-iconpos="notext" data-shadow="false" data-iconshadow="false"
    class="ui-nodisc-icon">Open left panel</a>
{{/section}}
<form id="signin" name="signin" method="post" action="signin" class="ui-body ui-body-a ui-corner-all" data-ajax="false">
    <fieldset>
        <div data-role="fieldcontain">
            <label for="username">Username:</label>
            <input type="text" value="" name="email" />
        </div>
        <div data-role="fieldcontain">
            <label for="password">Password:</label>
            <input type="password" value="" name="password" />
        </div>
        <input type="submit" data-theme="b" value="Sign In">
    </fieldset>
</form>
{{#section 'footer'}}
<h1>Footer</h1>
{{/section}}